# MarketMaven Configuration
# Copy this file to .env and update with your actual values

# API Keys (Required)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
GOOGLE_API_KEY=your_google_ai_api_key_here

# Interactive Brokers Configuration (Optional - for live trading)
IB_HOST=127.0.0.1
IB_PORT=7497
IB_CLIENT_ID=1
IB_ACCOUNT=your_ib_account_id

# Environment Configuration
ENVIRONMENT=development
ENABLE_DRY_RUN=true
DEBUG=false

# Trading Configuration
MAX_POSITION_SIZE=100
DEFAULT_RISK_TOLERANCE=moderate
DEFAULT_INVESTMENT_HORIZON=medium_term
ENABLE_STOP_LOSS=true
DEFAULT_STOP_LOSS_PERCENTAGE=5.0

# Data Configuration
CACHE_TTL_SECONDS=300
MAX_CACHE_SIZE=1000
ENABLE_DATA_VALIDATION=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/market_maven.log
ENABLE_STRUCTURED_LOGGING=true

# Monitoring Configuration
METRICS_PORT=8000
ENABLE_METRICS=true
HEALTH_CHECK_INTERVAL=30

# Database Configuration
POSTGRES_DB=marketmaven
POSTGRES_USER=marketmaven
POSTGRES_PASSWORD=your_secure_database_password_here

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Rate Limiting
API_RATE_LIMIT=5
API_RATE_LIMIT_PERIOD=60

# Model Configuration
GEMINI_MODEL=gemini-2.0-flash
MODEL_TEMPERATURE=0.1
MODEL_MAX_TOKENS=4096

# Trading Configuration
STOP_LOSS_PERCENTAGE=0.05
TAKE_PROFIT_PERCENTAGE=0.10

# Logging Configuration
JSON_LOGS=true

# Metrics Configuration
ENABLE_METRICS=true

# Security Configuration
ENCRYPT_SENSITIVE_DATA=true
ENCRYPTION_KEY=your_encryption_key_here 